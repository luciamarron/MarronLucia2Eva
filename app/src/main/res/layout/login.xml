<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/SCBSwitch"
    android:id="@+id/back"
    tools:context=".PantallaLogin">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="129dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/ic_launcher_foreground"
        app:layout_constraintBottom_toTopOf="@+id/contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shapedrawable"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="@color/gris"
        app:layout_constraintBottom_toTopOf="@+id/inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario" />

    <Button
        android:id="@+id/registro"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="136dp"
        android:backgroundTint="#E61FC535"
        android:text="REGISTRO"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio" />

    <Button
        android:id="@+id/inicio"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="118dp"
        android:backgroundTint="#E61FC535"
        android:text="INICIAR SESIÓN"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contraseña" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/shapedrawable"
        android:hint="Usuario"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#818181"
        android:textColorHint="@color/gris"
        app:layout_constraintBottom_toTopOf="@+id/contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginBottom="672dp"
        android:outlineAmbientShadowColor="@color/black"
        android:shadowColor="@color/black"
        android:theme="@style/SCBSwitch"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>